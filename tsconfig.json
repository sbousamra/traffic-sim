{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "composite": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "jsx": "react",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "types": ["vite/client"]
  },
  "exclude": ["**/node_modules", "**/dist"]
}
